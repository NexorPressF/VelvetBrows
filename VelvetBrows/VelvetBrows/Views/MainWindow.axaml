<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VelvetBrows.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:VelvetBrows.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VelvetBrows.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Бархатные Бровки">
        <Grid RowDefinitions="50, *">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
                        <Image Height="45" Source="../Assets/beauty_logo.ico"/>
                </StackPanel>
                <ContentControl Name="MCC" Grid.Row="1"/>
        </Grid>
</Window>
